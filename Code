#include <iostream>

using namespace std;

int main() {
    float R1, R2, R3, R0;

    // Ввод значений сопротивлений
    cout << "Введите значение сопротивления R1: ";
    cin >> R1;
    cout << "Введите значение сопротивления R2: ";
    cin >> R2;
    cout << "Введите значение сопротивления R3: ";
    cin >> R3;

    // Вычисление сопротивления R0
    R0 = 1 / (1/R1 + 1/R2 + 1/R3);

    // Вывод результата
    cout << "Значение сопротивления R0 = " << R0 << endl;

    return 0;
}
